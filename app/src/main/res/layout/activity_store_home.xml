<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:id="@+id/drawer_lay"
    android:layout_height="match_parent"
    tools:context="souk.arab.com.soukelarab.StoreHome">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linn"
            android:layout_alignParentTop="true"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/bgmatger"
        android:layout_width="match_parent"
        android:layoutDirection="ltr"
        android:layout_height="220dp">
        <ImageView
            android:id="@+id/notifcation"
            android:src="@drawable/notification"
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <LinearLayout
            android:layoutDirection="rtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_menu_white_24dp" />
            <ConstantClasss.Custom_Textview
                android:id="@+id/txt_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="القائمة الرئيسية"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/rel"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp">
            <ImageView
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:src="@drawable/b3"
                android:layout_height="70dp" />
            <ImageView
                android:src="@drawable/batrlogo"
                android:layout_centerVertical="true"
                android:layout_width="130dp"
                android:layout_centerHorizontal="true"
                android:layout_height="130dp" />
            <ImageView
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/b2"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <ConstantClasss.Custom_Textview
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/rel"
            android:id="@+id/t1"
            android:textSize="13dp"

            android:drawablePadding="5dp"
            android:text="متجر باترز"
            android:layout_height="wrap_content"/>
        <ConstantClasss.Custom_Textview
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/t1"
            android:textSize="12dp"
            android:drawablePadding="5dp"
            android:text="متجر الكترونى لصيانه الاجهزه وبيع الموبيلات الحديثه "
            android:layout_height="wrap_content"/>
    </RelativeLayout>


            <View

    android:id="@+id/divider"
    android:background="@drawable/shadow"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    />
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ImageView
    android:id="@+id/im"

    android:layout_centerHorizontal="true"
    android:src="@drawable/ppro"
    android:layout_width="50dp"
    android:layout_height="50dp" />
        <ConstantClasss.Custom_Textview
            android:id="@+id/txt"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@+id/im"
            android:textSize="12dp"
            android:drawablePadding="5dp"
            android:text="لا يوجد منتجات ف متجرك لأضافه منتج اضغط "
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ripple_addPto"
            android:layout_below="@+id/txt"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:layout_margin="10dp"
            android:padding="8dp"
            android:background="@drawable/button_shap"
            android:layout_height="wrap_content"
            >

        <ConstantClasss.Custom_Textview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/txt_haveaccount"
            android:text="أضف منتج"
            android:layout_marginRight="2dp"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            />
        </LinearLayout>
    </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linn"
        android:layoutDirection="rtl"
        android:weightSum="5"
        android:background="#4b3286"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:id="@+id/h1"
            android:layout_weight="1"
            android:layoutDirection="rtl"
            android:background="#381e75"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/homee"
                android:layout_width="18dp"
                android:layout_height="14dp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/h2"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/matger"
                android:layout_width="18dp"
                android:layout_height="14dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/h3"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/cartt"
                android:layout_width="18dp"
                android:layout_height="14dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/h4"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/heart"
                android:layout_width="18dp"
                android:layout_height="14dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/h5"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/setting"
                android:layout_width="18dp"
                android:layout_height="14dp" />
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>


    <fragment
        android:id="@+id/nv_fragment"
        android:name="Fragments.NavigationStore"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_store"
        tools:layout="@layout/fragment_navigation_store">

    </fragment>

</android.support.v4.widget.DrawerLayout>
