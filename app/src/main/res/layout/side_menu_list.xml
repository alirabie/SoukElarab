<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/movebg"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/relall"
    android:layout_width="match_parent"
    android:background="@color/movebg"
    android:layout_height="match_parent"
    >
<RelativeLayout
    android:id="@+id/linall"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:layout_marginLeft="25dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_centerInParent="true"
        android:background="@drawable/logo"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <com.andexert.library.RippleView
        android:id="@+id/rel_home"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/imgLogo"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        rv_centered="true">

        <ConstantClasss.Custom_Textview
            android:id="@+id/txt_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="إضافة منتج"
            android:layout_alignParentRight="true"
            android:textColor="@color/wite"
            android:textStyle="bold"
            android:textSize="16dp" />

    </com.andexert.library.RippleView>
    <com.andexert.library.RippleView
        android:id="@+id/relprofile"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/rel_home"
        android:layout_alignParentRight="true"
        rv_centered="true">

        <ConstantClasss.Custom_Textview
            android:id="@+id/txt_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="طلبات العملاء"
            android:layout_alignParentRight="true"
            android:textColor="@color/wite"
            android:textStyle="bold"
            android:textSize="16dp" />
    </com.andexert.library.RippleView>
    <com.andexert.library.RippleView
        android:id="@+id/rel_ideal"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relprofile"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        rv_centered="true">

        <ConstantClasss.Custom_Textview
            android:id="@+id/txt_ideal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="مندوب التوصيل"
            android:layout_alignParentRight="true"
            android:textColor="@color/wite"
            android:textStyle="bold"
            android:textSize="16dp" />

    </com.andexert.library.RippleView>
    <com.andexert.library.RippleView
        android:id="@+id/rel_service"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_ideal"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        rv_centered="true">
        <ConstantClasss.Custom_Textview
            android:id="@+id/txt_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="إعدادات المتجر"
            android:layout_alignParentRight="true"
            android:textColor="@color/wite"
            android:textStyle="bold"
            android:textSize="16dp" />

    </com.andexert.library.RippleView>
</RelativeLayout>
</RelativeLayout>

</ScrollView>