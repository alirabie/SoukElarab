<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"



    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="160dp"
        android:layout_height="220dp"


        android:background="@drawable/white_shap"
        android:layoutDirection="ltr">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_shapp">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"

                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/like"
                    android:layout_gravity="center"
                    android:layout_width="18dp"
                    android:layout_height="18sp"
                    android:layout_marginLeft="20dp"
                    android:paddingRight="3dp"
                     />
            </LinearLayout>

            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.5">

                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/line" />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/im2" />
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/line" />

                <CheckBox
                    android:padding="5dp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/basket"
                    android:background="@drawable/cart"
                    android:layout_gravity="center"
                    android:button="@android:color/transparent" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView

                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:id="@+id/ques_image"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                   />
            </RelativeLayout>

            <ConstantClasss.Custom_Textview
                android:layout_marginTop="3dp"
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"

                android:text="هواوى 7 شريحه 2 جيجا رام شاشه 7 بوصه"
                android:textColor="#a7a7a7"
                android:textSize="9sp"
                />

            <com.whinc.widget.ratingbar.RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="110dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                app:rb_click_rating="false"
                app:rb_count="5"
                app:rb_empty="@drawable/empty"
                app:rb_fill="@drawable/fill"
                app:rb_max_count="5"
                app:rb_space="2dp"
                app:rb_touch_rating="false" />

            <LinearLayout

                android:layout_width="115dp"
                android:layout_height="30dp"
                android:layout_below="@+id/check_agree"

                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_shap"
                android:gravity="center"
                        >

                <ConstantClasss.Custom_Textview
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"

                    android:text="2500,000 SAR"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>